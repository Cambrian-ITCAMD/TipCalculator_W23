<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bill Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:text="@string/bill_amount"
                android:textStyle="bold|italic"
                style="@style/Label"/>

            <EditText
                android:id="@+id/bill_amount_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/empty_price"
                android:importantForAutofill="no"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Tip Percent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#0f0"
                android:elevation="10dp"
                android:fontFamily="serif"
                android:overScrollMode="always"
                android:rotationX="46"
                android:text="@string/tip_percent"
                style="@style/Label" />

            <Button
                android:id="@+id/dec_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="10dp"
                android:rotationX="37"
                app:icon="@drawable/ic_outline_remove_24"
                app:iconGravity="textStart"
                app:iconPadding="-3dp" />

            <TextView
                android:id="@+id/tip_percent_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20%"
                android:textSize="14sp" />

            <Button
                android:id="@+id/inc_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="10dp"
                android:rotationY="-41"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:iconPadding="-3dp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/tip_perecent_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="20" />

        <!-- Tip Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="serif"
                android:rotationY="66"
                android:text="@string/tip_amount"
                style="@style/Label"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/empty_price" />
        </LinearLayout>

        <!-- Total Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/total_amount"
                style="@style/Label"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/empty_price" />
        </LinearLayout>

        <!-- Number of People -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/number_of_people"
                style="@style/Label"/>

            <RadioGroup
                android:id="@+id/num_people_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:checkedButton="@id/two_people"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/one_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_person" />

                <RadioButton
                    android:id="@+id/two_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_people" />

                <RadioButton
                    android:id="@+id/three_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_3_people" />

                <RadioButton
                    android:id="@+id/four_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_4_people" />
            </RadioGroup>

            <Spinner
                android:id="@+id/numPeopleSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <!-- Total Per Person -->
        <LinearLayout
            android:id="@+id/perPersonLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/total_per_person"
                style="@style/Label" />

            <TextView
                android:id="@+id/totalAmountTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/empty_price" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="175dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:rotation="219"
            android:rotationX="54"
            android:rotationY="46"
            android:text="Save"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>