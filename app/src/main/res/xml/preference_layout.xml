<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_preference_1"
        android:title="Save data"
        android:summary="This will store data on exit"/>
    <ListPreference
        android:defaultValue="@string/no_rounding_value"
        android:entries="@array/rounding_text"
        android:entryValues="@array/rounding_values"
        android:key="list_preference_1"
        android:title="Rounding Options"
        app:summary="Set rounding options" />
</PreferenceScreen>